{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "rootDir": "src",
        "lib": ["ES2020"],
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out",
        "src/extension-enhanced.ts",
        "src/providers/type-hints-provider.ts",
        "src/providers/code-actions-provider.ts", 
        "src/providers/enhanced-diagnostics-provider.ts",
        "src/providers/enhanced-diagnostics-simple.ts",
        "src/providers/type-hints-simple.ts",
        "src/providers/code-actions-simple.ts",
        "src/utils/performance-monitor.ts",
        "src/lsp/enhanced-client.ts"
    ]
}