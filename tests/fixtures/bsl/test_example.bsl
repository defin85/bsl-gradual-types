Перем ГлобальнаяПеременная = 100;

Функция РассчитатьСкидку(СуммаЗаказа, ТипКлиента) Экспорт
    Перем Скидка;
    
    Если СуммаЗаказа > 10000 Тогда
        Скидка = 10;
    ИначеЕсли СуммаЗаказа > 5000 Тогда
        Скидка = 5;
    Иначе
        Скидка = 0;
    КонецЕсли;
    
    Если ТипКлиента = "VIP" Тогда
        Скидка = Скидка + 5;
    КонецЕсли;
    
    Возврат Скидка;
КонецФункции

Процедура ОбработатьЗаказ(Заказ) Экспорт
    Перем Контрагент, Сумма;
    
    // Получаем данные заказа
    Контрагент = Заказ.Контрагент;
    Сумма = Заказ.СуммаДокумента;
    
    // Рассчитываем скидку
    СкидкаПроцент = РассчитатьСкидку(Сумма, Контрагент.ТипКлиента);
    СуммаСкидки = Сумма * СкидкаПроцент / 100;
    
    // Записываем результат
    Заказ.Скидка = СкидкаПроцент;
    Заказ.ИтоговаяСумма = Сумма - СуммаСкидки;
    Заказ.Записать();
КонецПроцедуры

